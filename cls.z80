;CLS - VT100 CLEAR SCREEN FOR CP/M
;RELEASED IN THE PUBLIC DOMAIN AS
;ANYONE COULD HAVE WRITTEN THIS

BDOS:	EQU	5
WARMBT:	EQU	0
PRTSTR:	EQU	9

	ORG 100H

START:	LD C, PRTSTR	;Print VT100 escape code
	LD DE, CLS	;to clear the screen
	CALL BDOS

EXIT:	LD C, WARMBT	;Exit to CP/M
	CALL BDOS

CLS:	DB	1BH, "[2J", 1BH, "[H$"

	END
